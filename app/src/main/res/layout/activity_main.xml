<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/marrom"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/titulo_main"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Selecione um dos artistas abaixo e o número de recomendações semelhantes"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center" />

        <Spinner
            android:id="@+id/spinner_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/white" />

        <TextView
            android:id="@+id/led"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Led Zeppelin"
            android:textColor="@color/white"
            android:textSize="21dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="@id/titulo_main" />

        <TextView
            android:id="@+id/pink_floyd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pink Floyd"
            android:textColor="@color/white"
            android:textSize="21dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="@id/led" />

        <TextView
            android:id="@+id/iron_maiden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iron Maiden"
            android:textColor="@color/white"
            android:textSize="21dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="@id/pink_floyd" />

        <TextView
            android:id="@+id/beatles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Beatles"
            android:textColor="@color/white"
            android:textSize="21dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="@id/iron_maiden" />

        <TextView
            android:id="@+id/twisted_sister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Twisted Sister"
            android:textColor="@color/white"
            android:textSize="21dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="@id/beatles" />

        <TextView
            android:id="@+id/red_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red Hot Chili Peppers"
            android:textColor="@color/white"
            android:textSize="21dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintTop_toTopOf="@id/twisted_sister" />


    </LinearLayout>


</ScrollView>